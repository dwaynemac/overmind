      master_students: <%= monthly_stat = @monthly_stats[:master_students][month]; monthly_stat.try(:value) || 0 %>
    },
    <%- end -%>
    <%- month = 12 -%>
    {
      month: "<%= Date::MONTHNAMES[month] %>",
