<% require 'csv' %>

<%= CSV.generate do |csv|
  
  csv <<  [t('rankings.history.school_name')] + @ref_dates
  @schools.each do |school|
    
    s_name = school.full_name
    if s_name.blank?
      s_name = school.name
    end
    
    line = [ s_name ]
    @ref_dates.each do |ref_date|
      line << @stats_hash[ref_date][school.id]
    end
    csv << line
  end
  
  csv
end -%>
