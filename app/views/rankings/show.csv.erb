<% require 'csv' %>

<%= CSV.generate do |csv|
  csv << @ranking.column_names.map{|name| t("monthly_stat.names.#{name}")}
  @ranking.matrix.each do |school, stats_hash|
    line = []
    @ranking.column_names.each do |name|
      line << (stats_hash[name.to_s].nil? ? 'unknown' : stats_hash[name.to_s].value)
    end
    csv << line
  end
end -%>
