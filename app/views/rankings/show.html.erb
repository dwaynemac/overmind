<h2><%= t('ranking.title') %></h2>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th> <%= t('ranking.name') %> </th>
      <% @column_names.each do |name| %>
        <th> <%= t(name) %> </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @matrix.each do |school, stats_hash| %> 
      <tr>
        <th> <%= school.name %> </th>
        <% @column_names.each do |name| %>
          <th> <%= stats_hash[name] %></th>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
