<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Overmind</a>
      <div class="container nav-collapse">
        <ul class="nav">
          <%= li(params[:controller], 'monthly_stats') do
              link_to t('.global'), global_monthly_stats_path
            end if can?(:see_global,MonthlyStat)
          %>
          <%= li(params[:controller], 'federations') do
                if current_user.federation.present? && can?(:read_only_one,Federation)
                  link_to current_user.federation.name, current_user.federation
                else
                  link_to t('.federations'), federations_path
                end
              end if can?(:read, Federation)
          %>
          <%= li(params[:controller], 'schools') do
                if can?(:read_only_one, School)
                  link_to( current_user.enabled_accounts.first.name, schools_path )if current_user.enabled_accounts
                else
                  link_to t('.schools'), schools_path
                end
              end if can?(:read, School) -%>
          <%= li(params[:controller], 'users') do
                link_to t('.users'), users_path
              end if can?(:manage,User)
          %>
        </ul>
        <ul class="nav pull-right">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.username %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('logout'), logout_url %></li>
            </ul>
          </li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>